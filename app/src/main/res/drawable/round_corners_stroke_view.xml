<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle" android:tint="@color/colorWhite">
            <stroke android:width="1dp" android:color="@color/colorLightLightGray"/>
            <solid android:color="@color/colorLightLightGray" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:tint="@color/colorWhite">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorLightLightGray"/>
            <solid android:color="@color/colorWhite" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>